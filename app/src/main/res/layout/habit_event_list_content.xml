<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/habit_event_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/TextStyle_Heading2"
            android:id="@+id/habit_event_date"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/work_sans"
            android:text="2021-01-01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/habit_event_comment" />

        <TextView
            style="@style/TextStyle_Heading1"
            android:id="@+id/habit_event_comment"
            android:text="Habit Event Title" />


        <TextView
            style="@style/TextStyle_paragraph"
            android:id="@+id/habit_event_completed_on_time"
            android:layout_marginTop="40dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/habit_event_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>