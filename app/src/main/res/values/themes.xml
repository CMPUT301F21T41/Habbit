<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Habbit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
    </style>

    <!-- TextStyles -->
    <style name="TextStyle_Heading1">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/FIGMA_BLACK</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
    </style>

    <style name="TextStyle_Subtitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/FIGMA_GRAY</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle_Heading2">
        <item name="android:textColor">@color/FIGMA_BLACK</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
    </style>

    <style name="TextStyle_paragraph">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/FIGMA_BLACK</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
    </style>

    <style name="toggleButton" parent="Theme.Habbit">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textColor">@drawable/toggle_text_color</item>
    </style>
</resources>